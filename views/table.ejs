<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Attaching bootstrap link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- CSS - Style Sheet link -->
    <link rel="stylesheet" type="text/css" href="/css/table.css">

    <!-- Font-Awesome Link -->
    <script src="https://kit.fontawesome.com/1dd5c5cd8c.js" crossorigin="anonymous"></script>

    <title>Tabular View</title>
</head>
<body>
    <main>
        <header>
            <div id="home-butn">
                <a href="/">Home</a>
            </div>

            <!-- Creating Form for Search Details -->
            <form id="searchBar" action="javascript:searchData();">
                <div class="input-Data">
                   <input type="text" id="searchData" class="form-control" placeholder="Search details...">
                   <button id="Get" class="btn btn-default" type="button" 
                        onclick="document.getElementById('searchBar').submit();">Get
                   </button>
                </div>
             </form>

             <div>
                <!-- Total rows count is displayed here -->
                <p id="rowCount">Total Rows: <%= csvData.length+1%></p>
             </div>
        </header>
        <div id='table-container'>
            <table style="width:100%">
                <tr>
                    <% for (const [key, value] of Object.entries(csvData[0])) { %>
                       <th><%= key %></th>
                    <% } %>
                </tr>
                <% for(let i=0;i<csvData.length;i++) { %>
                <tr id="row-<%= i %>">
                    <% for(const [key, value] of Object.entries(csvData[i])) { %>
                        <td class="col-md-2"><%= value %></td>
                    <% } %>
                </tr>
                <% } %>
            </table>
        </div>
    </main>

    <!-- bootstrap bundle script CDN file location-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script type="text/javascript" src="/js/table.js"></script>
</body>
</html>